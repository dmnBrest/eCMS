{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots" : ["./../node_modules/@types"],
        "rootDir": "./.."
    },
    "exclude": [
        "./../node_modules",
        "./node_modules",
        "./.git",
        "./../.git"
    ]
}